<h1>Comments</h1>

<ul id="comments">
  <% @comments.each do |comment| %>
      <li><%= comment.content.html_safe %></li>
  <% end %>
</ul>

<h2>New Comment</h2>
<%= form_for [@commentable, Comment.new] do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :rows => 40, :cols => 120 %>

      <script type="text/javascript">
          tinyMCE.init({
              mode: 'textareas',
              theme: 'advanced'
          });
      </script>
    </div>
    <div class="actions">
      <%= f.submit "Add comment" %>
    </div>
<% end %>