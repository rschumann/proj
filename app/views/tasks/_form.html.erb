<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :user_id %><span>: </span>
    <%= f.select :user_id, User.all.map{|map| [map.title, map.id] } %>
  </div>
  <div class="field">
    <%= f.label :group_id %><span>: </span>
    <%= f.select :group_id, Group.all.map{|map| [map.title, map.id] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
